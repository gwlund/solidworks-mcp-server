# SolidWorks MCP Server Environment Configuration
# Copy this file to .env and customize with your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Anthropic Claude API Key (required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SolidWorks API Key (if required by your SolidWorks setup)
SOLIDWORKS_API_KEY=your_solidworks_api_key_here

# SolidWorks Installation Path
# Default Windows path: C:\Program Files\SOLIDWORKS Corp\SOLIDWORKS
# Adjust for your installation location
SOLIDWORKS_INSTALL_PATH=C:\Program Files\SOLIDWORKS Corp\SOLIDWORKS

# =============================================================================
# OPTIONAL CONFIGURATION (with defaults)
# =============================================================================

# SolidWorks Configuration
SOLIDWORKS_VERSION=2025
SOLIDWORKS_VISIBLE=false

# Claude AI Configuration
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# File Export Configuration
DEFAULT_EXPORT_FORMAT=STEP

# Logging Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# =============================================================================
# ADVANCED CONFIGURATION (optional)
# =============================================================================

# Claude Temperature Settings for Different Operations
# Lower values (0.1-0.3) = more consistent/deterministic
# Higher values (0.7-1.0) = more creative/varied
CLAUDE_TEMP_CATEGORIZATION=0.3
CLAUDE_TEMP_RESPONSE_GENERATION=0.7
CLAUDE_TEMP_SUMMARIZATION=0.4
CLAUDE_TEMP_ACTION_EXTRACTION=0.2

# SolidWorks API Configuration
SOLIDWORKS_TIMEOUT=30
SOLIDWORKS_RETRY_ATTEMPTS=3
SOLIDWORKS_BATCH_SIZE=10

# Performance Configuration
MAX_CONCURRENT_OPERATIONS=5
CACHE_TTL_SECONDS=300
MAX_FILE_SIZE_MB=100

# Security Configuration
ENABLE_AUDIT_LOGGING=true
MAX_LOG_FILE_SIZE_MB=50
LOG_RETENTION_DAYS=30
