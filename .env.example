# Gmail MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# ANTHROPIC CLAUDE API CONFIGURATION
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use for email processing
# Options: claude-3-5-sonnet-20241022, claude-3-haiku-20240307, claude-3-opus-20240229
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for Claude responses
CLAUDE_MAX_TOKENS=1000

# =============================================================================
# GMAIL API CONFIGURATION
# =============================================================================
# Path to your Google OAuth credentials file
GMAIL_CREDENTIALS_PATH=credentials.json

# Path to store the authentication token
GMAIL_TOKEN_PATH=token.json

# Gmail API scopes (comma-separated)
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# =============================================================================
# EMAIL PROCESSING CONFIGURATION
# =============================================================================
# Default number of emails to fetch at once
DEFAULT_EMAIL_BATCH_SIZE=10

# Maximum emails to process in a single request
MAX_EMAIL_BATCH_SIZE=50

# Email categories (comma-separated)
EMAIL_CATEGORIES=Urgent,Work,Personal,Newsletters,Promotions,Receipts,Social,Spam

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server name and version
MCP_SERVER_NAME=gmail-mcp-server
MCP_SERVER_VERSION=0.1.0

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Enable debug mode (true/false)
DEBUG_MODE=false

# =============================================================================
# OPTIONAL: RESPONSE GENERATION SETTINGS
# =============================================================================
# Default response tone
DEFAULT_RESPONSE_TONE=professional

# Response generation temperature (0.0-1.0)
CLAUDE_TEMPERATURE=0.7

# Enable response suggestions (true/false)
ENABLE_RESPONSE_SUGGESTIONS=true

# =============================================================================
# OPTIONAL: EMAIL CATEGORIZATION SETTINGS
# =============================================================================
# Confidence threshold for auto-categorization (0.0-1.0)
CATEGORIZATION_CONFIDENCE_THRESHOLD=0.8

# Enable automatic labeling in Gmail (true/false)
AUTO_APPLY_GMAIL_LABELS=false

# =============================================================================
# OPTIONAL: SECURITY AND PRIVACY
# =============================================================================
# Enable email content caching (true/false)
ENABLE_EMAIL_CACHING=false

# Cache expiration time in seconds (default: 1 hour)
CACHE_EXPIRATION_SECONDS=3600

# Enable audit logging (true/false)
ENABLE_AUDIT_LOGGING=true
